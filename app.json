{
  "expo": {
    "name": "Pacely",
    "slug": "pacely",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pacely.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow Pacely to use your location to track your runs.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Pacely to use your location to track your runs.",
        "NSLocationAlwaysUsageDescription": "Allow Pacely to use your location to track your runs."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.pacely.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Pacely to use your location to track your runs."
        }
      ]
    ],
    "sdkVersion": "52.0.0",
    "experiments": {
      "tsconfigPaths": true,
      "newArchEnabled": true
    }
  }
} 